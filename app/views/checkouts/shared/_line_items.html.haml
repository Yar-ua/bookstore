.visible-xs.mb-55
  - line_items.each do |line_item|
    .general-cart-item.divider-lg
      .general-img-wrap-table
        = image_tag line_item.general_image_thumb || 'blank.svg', class: 'cart-img-shadow', alt: line_item.title
      %p.title= line_item.book.title
      %p.in-grey-600.fw-300= line_item.short_description
      %table.table
        %tr
          %td
            %span.in-grey-600= t('.price')
          %td
            %span.font-16.in-gold-500= line_item.price.format
        %tr
          %td.vertical-middle
            %span.in-grey-600= t('.quantity')
          %td
            %span= line_item.quantity
        %tr
          %td
            %span.in-grey-600= t('.subtotal')
          %td
            %span.font-16.in-gold-500= line_item.subtotal.format
.hidden-xs.divider-lg.pt-20
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600= t('.book')
        %th.col-method
        %th
          %span.in-grey-600= t('.price')
        %th
          %span.in-grey-600= t('.quantity')
        %th
          %span.in-grey-600= t('.subtotal')
    %tbody
      - line_items.each do |line_item|
        %tr
          %td
            .general-img-wrap-table
              = image_tag line_item.general_image_thumb || 'blank.svg', class: 'cart-img-shadow pull-left', alt: line_item.title
          %td
            %p.title= line_item.title
            %p.in-grey-600.fw-300= line_item.short_description
          %td
            %span.font-16.in-gold-500= line_item.price.format
          %td
            %span.ml-30= line_item.quantity
          %td
            %span.font-16.in-gold-500= line_item.subtotal.format