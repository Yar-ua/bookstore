.dropdowns.pull-right
  .dropdown.width-240
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = @current_sort[:title]
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      - @sort_list.each do |key, values|
        %li
          = link_to values[:title], catalog_path(sort_params(key, @current_category.id)), class: "filter-link sort"
