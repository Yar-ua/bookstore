- @books.in_groups_of(4) do |group|
  .row
    - group.compact.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            = image_tag("http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", class: "img-shadow general-thumbnail-img", alt: book.title)
            .thumb-hover
              .general-thumb-link-wrap
                = link_to book_path(book), class: "thumb-hover-link book" do
                  %i.fa.fa-eye.thumb-icon.pt-10{'aria-hidden': "true"}
                %a.thumb-hover-link{href: "#"}
                  %i.fa.fa-shopping-cart.thumb-icon.pt-10
        .general-thumb-info
          %p.title= book.title
          %p.font-16.in-gold-500= book.price_to_euro
          %span.divider-sm
          %p.lead.small= book.book_authors
