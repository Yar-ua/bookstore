%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('header.home'), root_path, class: "nav-link"
          %li
            = link_to t('header.shop'), books_path, class: "nav-link"
          %li
            %a.nav-link{href: "#"}= t('header.orders')
          %li
            %a.nav-link{href: "#"}= t('header.settings')
      .col-sm-3
        %p.general-nav-mail= t('footer.support_email') 
        %p.general-nav-number= t('footer.support_phone') 
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
