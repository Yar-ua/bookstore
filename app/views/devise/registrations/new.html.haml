%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('session.signup')
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text= t('session.or')
  %div.general-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group.mb-30
        %label.control-label.input-label{for: "email"}= t('session.enter_email')
        = f.email_field :email, autofocus: true, autocomplete: "email", id: 'email', class: 'form-control', placeholder: t('session.enter_email')
        = resource.errors.messages[:email].to_sentence
      .form-group.mb-30
        %label.control-label.input-label{for: "password"}= t('session.password')
        = f.password_field :password, autocomplete: "password", id: 'password', class: 'form-control', placeholder: t('session.password')
        = resource.errors.messages[:password].to_sentence
      .form-group.mb-30
        %label.control-label.input-label{for: "password_confirm"}= t('session.confirm_password')
        = f.password_field :password_confirmation, autocomplete: "password_confirm", class: 'form-control', placeholder: t('session.confirm_password')
        = resource.errors.messages[:password_confirmation].to_sentence
      .text-center
      .form-group.checkbox.text-center.mb-30
        %button.btn.btn-default.mb-20
          = submit_tag t('session.signup'), class: 'btn-submit-login-sign-up btn-default'
    %p.general-sign-text.text-center
      = t('session.have_account')
      = link_to t('session.login'), new_session_path(resource_name), class: 'in-gold-500'
