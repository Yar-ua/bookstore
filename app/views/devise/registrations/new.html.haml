%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('session.signup')
    - if devise_mapping.omniauthable?
      = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'general-login-icon' do
        %i.fa.fa-facebook-official
    %p.general-login-text= t('session.or')
  %div.general-form
    = simple_form_for(resource, as: resource_name, validate: true, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group.mb-30
        = f.input :email, label: t('session.enter_email'), autofocus: true, autocomplete: "email", id: 'email', class: 'form-control', placeholder: t('session.enter_email'), validate: true
      .form-group.mb-30
        = f.input :password, label: t('session.password'), autocomplete: "password", id: 'password', class: 'form-control', placeholder: t('session.password')
      .form-group.mb-30
        = f.input :password_confirmation, label: t('session.confirm_password'), autocomplete: "password_confirm", class: 'form-control', placeholder: t('session.confirm_password'), validate: true
      .text-center
      .form-group.checkbox.text-center.mb-30
        %button.btn.btn-default.mb-20
          = submit_tag t('session.signup'), class: 'btn-submit-login-sign-up btn-default'
    %p.general-sign-text.text-center
      = t('session.have_account')
      = link_to t('session.login'), new_session_path(resource_name), class: 'in-gold-500'
