%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('session.login')
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text= t('session.or')
  %div.general-form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group.mb-30
        %label.control-label.input-label{for: "email"}= t('session.enter_email')
        = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', placeholder: t('session.enter_email')
      .form-group.mb-30
        %label.control-label.input-label{for: "password"}= t('session.password')
        = f.password_field :password, id: 'password', class: 'form-control', placeholder: t('session.password')
        = link_to t('session.forgot_password'), new_password_path(resource_name), class: 'help-block in-gold-500'
      .form-group.checkbox.text-center.mb-30
        %label.checkbox-label
          %input.checkbox-input{type: "checkbox", hidden: "true"}
          %span.checkbox-icon
            %i.fa.fa-check
          - if devise_mapping.rememberable?
            = f.label :remember_me, class: 'checkbox-text remember-me'
      .text-center
        %button.btn.btn-default.mb-20
          = submit_tag t('session.login'), class: 'btn-submit-login-sign-up btn-default'
  %p.general-sign-text.text-center
    = t('session.dont_have_account')
    = link_to "Sign up", new_registration_path(resource_name), class: 'in-gold-500'
