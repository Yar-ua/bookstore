%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('session.set_new_password')
  %div.general-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), validate: true, method: :put) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      .form-group.mb-30
        = f.input :password, label: t('session.password'), autocomplete: "password", id: 'password', validate: true, class: 'form-control', placeholder: t('session.password')
        = resource.errors.messages[:password].to_sentence
      .form-group.mb-40
        = f.input :password_confirmation, label: t('session.confirm_password'), autocomplete: "password_confirm", validate: true, class: 'form-control', placeholder: t('session.confirm_password')
        = resource.errors.messages[:password_confirmation].to_sentence
      .text-center
        = submit_tag t('session.change'), class: 'button btn btn-default center-block mb-20'
