%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('session.set_new_password')
  %div.general-form
    = form_for(resource, as: resource_name, url: password_path(resource_name), method: :put) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      .form-group.mb-30
        %label.control-label.input-label{for: "password"}= t('session.password')
        = f.password_field :password, autocomplete: "password", id: 'password', class: 'form-control', placeholder: t('session.password')
        = resource.errors.messages[:password].to_sentence
      .form-group.mb-40
        %label.control-label.input-label{for: "password_confirm"}= t('session.confirm_password')
        = f.password_field :password_confirmation, autocomplete: "password_confirm", class: 'form-control', placeholder: t('session.confirm_password')
        = resource.errors.messages[:password_confirmation].to_sentence
      .text-center
        = submit_tag t('session.change'), class: 'button btn btn-default center-block mb-20'
